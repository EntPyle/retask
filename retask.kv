<TaskScreen>:
	BG:
		BoxLayout:
			orientation:'vertical'
			TopBar:
			    id:top_bar
				size_hint_y: None
				height:'64dp'
				padding:'16dp','16dp','16dp','0dp'
				on_add_taskwidget: root.new_task()
				on_manage_groups: root.manage_groups_popup()
				on_show_complete_tasks: root.toggle_scheduled_tasks()
			Space:
				size_hint_y:None
				height:'16dp'
			ScrollView:
                scroll_type: ['bars', 'content']
                scroll_wheel_distance: dp(114)
                bar_width: dp(10)
			    do_scroll_y: False
			    do_scroll_x: True
                GridLayout:
                    id: task_container_section
                    rows: 1
                    pos_hint_x: {'center_x': 0.5}
                    cols_minimum: {0: 150, 1: 150, 2:150, 3:150, 4:150, 5:150}
#                    col_default_width: '400dp'
#                    width: self.minimum_width
#                    size_hint_x: None
