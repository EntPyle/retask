<SearchBox@BoxLayout>:
	padding:'8dp','8dp'
	orientation:'horizontal'
	spacing:'8dp'
	canvas.before:
		Color:
			rgba: 0.925, 0.941, 0.937, 1.0
		RoundedRectangle:
			pos: self.pos
			size: self.size
	TextInput:
	    id: search_input
		hint_text:'Search'
		font_name: 'data/fonts/Lato-Regular.ttf'
		font_size: app.font_size
		background_color:(0,0,0,0)
		multiline:False
		on_text: app.screenmanager.get_screen('screen-task').search_tasks(self.text)

<TopBar@BoxLayout>:
	orientation:'horizontal'
	spacing:'16dp'
	TodoButton:
		size_hint:None, None
		size:'48dp', '48dp'
		border:10,10,10,10
		background_normal:'data/images/src/but_new.png'
		background_down:'data/images/src/but_new_down.png'
		on_release: root.dispatch('on_add_taskwidget')
	TodoButton:
		size_hint:None, None
		size:'48dp', '48dp'
#		border:10,10,10,10
		background_normal:'data/images/src/blue_settings_gear.png'
		background_down:'data/images/src/blue_settings_gear_down.png'
		on_release: app.open_settings()
	Space:
    SearchBox:
        id: search_box
        width:'240dp'
        size_hint_x:None
	TodoToggleButton:
	    id: toggle_complete
	    height: '48dp'
	    text: 'Toggle Scheduled Tasks'
	    size_hint_x: None
	    width: self.texture_size[0]*1.2
        background_normal:'data/images/src/but_blue.png'
        background_down:'data/images/src/but_blue_down.png'
        on_state: root.dispatch('on_show_complete_tasks')
    TodoButton:
        size_hint:None, None
        height: '48dp'
        text:'Manage Groups'
        width: self.texture_size[0]*1.2
        background_normal:'data/images/src/but_blue.png'
        background_down:'data/images/src/but_blue_down.png'
        on_release:root.dispatch('on_manage_groups')
