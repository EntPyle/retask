<TaskWidget>:
    # Todo fix resizing of the internal widgets to make app more flexible
	id: task_w
	orientation: 'vertical'
	but_del:but_del
	task_input:task_input
	pos_hint: {'center_x': 0.5}
	size_hint_y: None
	height: '110dp' if self.edit else '60dp'
	padding: '8dp'
	spacing: '8dp'
	canvas:
		Color:
			rgba: 0.925, 0.941, 0.937, 1.0
		RoundedRectangle:
			pos: self.pos
			size: self.size
			radius: 10,10,10,10
	BoxLayout:
		id: task_top
		orientation: 'horizontal'
		TodoInput:
			id: task_input
			multiline: False
			halign: 'left'
			text: 'Default text box values'
			text_size: self.size
			size_hint_x: 1
			size_hint_min_x: 200 if not self.disabled else 50
			size_hint_y: 0.9
			pos_hint: {'left': 1}
		TodoLabel:
			id: lbl_freq
			text: root.ids['freq_spin'].text
			size_hint_x: 0.25
			size_hint_min_x: self.texture_size[0]*1.1
			size_hint_max_x: 200
			size_hint_y: 1
			height: self.texture_size[1]
			pos_hint: {'right': 0.4}
		TodoLabel:
			id: lbl_group
			text: root.ids['group_spin'].text
			size_hint_x: 0.25
			size_hint_min_x: self.texture_size[0]*1.1
			size_hint_max_x: 200
			size_hint_y: 1
			height: self.texture_size[1]
			pos_hint: {'right': 0.7}
		TodoButton:
		    id: btn_complete
		    on_release: root.dispatch('on_complete')
            size_hint_min: dp(48), dp(48)
            size_hint: None, 1
            width: self.height
		    background_down: 'data/images/src/Bright_green_checkbox_checked.png'
		    background_normal: 'data/images/src/Bright_green_checkbox.png'
		    pos_hint: {'right': 0.9}
	BoxLayout:
		id: task_btm
		orientation: 'horizontal'
		spacing:'16dp'
		TodoSpinner:
			id: freq_spin
			text: 'One-Time'
			on_text: root.frequency_changed()
			values: Task.frequency_list
			size_hint_x: 0.75
			size_hint_y: 0.9
		TodoSpinner:
			id: group_spin
			text: 'None'
			values: root.group_list
			size_hint_x: 0.75
			size_hint_y: 0.9
			sync_height: True
		Space:
			id: edit_spc
			size_hint_x: 1
			size_hint_y: 1
		TodoButton:
			id: but_del
			size_hint: None, .75
			pos_hint: {'right': 1}
			width: self.height
			border:8,8,8,8
			background_normal:'data/images/src/but_del.png'
			background_down:'data/images/src/but_del_down.png'
			on_release:root.dispatch('on_delete')

<TaskWidgetContainer@ScrollView>:
    scroll_type: ['content']
    scroll_wheel_distance: dp(114)
    bar_width: dp(10)
    container: container
    do_scroll_x: False
    BoxLayout:
        id: container
        orientation: 'vertical'
		size_hint_y:None
		height:self.minimum_height
#		width: self.minimum_width
#		size_hint_min_x: dp(600)
		padding:'16dp','16dp','16dp','16dp'
		spacing:'16dp'